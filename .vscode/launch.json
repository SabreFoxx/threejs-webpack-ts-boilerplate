{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Chrome",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: debug",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/src",
            "port": 4040,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*",
            },
            // outcomment below to trace in case the above doesn't work
            // "trace": "verbose"
        }
    ]
}
